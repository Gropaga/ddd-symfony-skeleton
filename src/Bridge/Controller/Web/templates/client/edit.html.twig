{% extends "base.html.twig" %}

{% block content %}
    {{ form(form) }}
    <div class="py-5 text-center">
        <h2>Add bank account</h2>
    </div>

    {{ form(bankAccountForm) }}

    <div class="py-5 text-center">
        <h2>Bank account list</h2>
        <p class="lead">Full list of client's bank accounts displayed below</p>
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">BIC</th>
            <th scope="col">Balance</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for bank in bankAccounts %}
            <tr>
                <td>{{ bank.bic }}</td>
                <td>{{ bank.balance }}</td>
                <td>
                    <a href="{{ url('delete_client', {'id': bank.id}, false) }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}